<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kersitery.taxi.taxi.ControlActivity">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="控制台"
            android:gravity="center"
            android:id="@+id/control"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/cont"
            android:checked="true"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务中心"
            android:gravity="center"
            android:id="@+id/work"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@drawable/words_color"
            android:drawableTop="@drawable/mess"
            android:checked="false"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息中心"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/message"
            android:button="@null"
            android:textColor="@drawable/words_color"
            android:drawableTop="@drawable/mm"
            android:checked="false"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的资料"
            android:id="@+id/me"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@drawable/words_color"
            android:drawableTop="@drawable/set"
            android:checked="false"/>
    </RadioGroup>


</LinearLayout>
